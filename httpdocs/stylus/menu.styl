.menu
	position absolute
	top 0
	left 0
	padding 1em 0
	z-index 2
	width 100%
	a
		display inline
		color #fff
		text-decoration none
	.menu_items
		float right
		li
			display inline
			margin-left 1em
			&:last-child
				a
					background $green
					padding .3em .5em .2em
					border-radius .5em
		

