#hero
	background rgb(52,62,68);
	background radial-gradient(circle, $lightblue 0%, $darkblue 100%)
	color #fff
	height 50vh
	position relative
	text-align center
	overflow hidden
	@media screen and (max-width: 767px)
		font-size 120%
	@media screen and (min-width: 768px) and (max-width: 1023px)
		font-size 150%
	@media screen and (min-width: 1024px) and (max-width: 1439px)
		font-size 250%
	@media screen and (min-width: 1440px)
		font-size 300%
	&:afer
		clearfix()
	strong
		color $green
	h1,h3
		font-size 1.5em
	h2
		font-size 2em
	h3
		margin-bottom .5em
#introduction
	color #eee
	a
		color #eee
	p
		max-width 50em
		padding-right 1em
	ul
		margin 1em 0 2em
		li
			margin-bottom .5em
			small
				display block
				color #999
#experience
	background #eee
	&:after
		clearfix()
	a
		display block
		color #ffffff
		background $lightblue
		text-decoration none
		overflow hidden
		border-radius 0 0 .5em .5em
		box-shadow 4px 4px 10px 0px rgba(0,0,0,.2)
		position relative
		&:after
			clearfix()
		.more
			position absolute
			bottom 1em
			right 1em
			text-align right
			margin 0
		.gutter
			height 9em
	a:hover
		background $darkblue
		box-shadow 4px 4px 10px 0px rgba(0,0,0,.4)
		.more
			text-decoration underline
#education
	background $darkblue
	color #f0f0f0
	h2
		margin-bottom 1em
	ul:not(.achievements)
		> li
			border .3em solid $lightblue
			margin-bottom 1em
			padding 1em
			.institution
				color lighten($lightblue, 20)
				margin 0
			.date
				display inline-block
				background $green
				padding .3em .6em
				border-radius .3em
				font-size .8em
			ul
				li
					margin-top .5em
	a
		color #fff
#hire_me
	background $green
	color #fff
	.contacts
		line-height 1.6em
		a
			color #fff
	.icon
		width .9em
		display inline-block
		margin-right .5em
		vertical-align middle